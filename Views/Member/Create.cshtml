
@model AzureCosmosDbExample.Models.Member

@{
    ViewData["Title"] = "Create";
}


<h2>Add New Member</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrap-contact100">
           
            <div class="" data-validate="Please Type Your Name">
                <span class="label-input100">Name</span>
                @*<input class="input100" type="text" name="name" placeholder="Enter Your Name">*@
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="" data-validate="Please Type Your Surname">
                <span class="label-input100">Surname</span>
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
            </div>

            <div class="" data-validate="Enter Your Email (e@a.x)">
                <span class="label-input100">Email *</span>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="container-contact100-form-btn">
                <button type="submit" class="contact100-form-btn">
                    <span>
                        Submit
                        <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
    </div>
}