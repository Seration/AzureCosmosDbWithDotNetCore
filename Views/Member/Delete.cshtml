@model AzureCosmosDbExample.Models.Member

@{
    ViewData["Title"] = "Delete";
}


<h3 class="mt-3 mb-3">Are you sure you want to delete this?</h3>

<div class="container">
    <div class="row">

        <div class="col">
            <ul>
                <li>Name: @Html.DisplayFor(model => model.Name)</li>
                <li>Surname: @Html.DisplayFor(model => model.Surname)</li>
                <li>Email: @Html.DisplayFor(model => model.Email)</li>
                <li>Register Date: @Html.DisplayFor(model => model.RegisterDate)</li>
            </ul>
        </div>

        <div class="col">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> <br />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>